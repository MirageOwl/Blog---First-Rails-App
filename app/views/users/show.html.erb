<% provide(:title, @user.name) %>
<div class="container " style="border:1px solid black;border-radius:12px;padding:12px;background-color:#eba">
  <div class="row " style="border:1px solid black;border-radius:12px;padding:12px;background-color:#fee">
    <div class="three columns" style="width:104px;height:104px;border:1px solid black;border-radius:12px;padding:12px;background-color:#eba">
        <div>
          <%= gravatar_for @user %>
        </div>
    </div>
    <div class="nine columns">
      <div>
        <strong>Name:</strong>
        <%= @user.name %>
      </div>
      <br>
      <div>
        <strong>E-Mail:</strong>
        <%= @user.email %>
      </div>
    </div>
  </div>
</div>
