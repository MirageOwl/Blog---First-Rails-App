<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for? :title %><%= yield :title %><% else %><%= "Blog" %><% end %>
    </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="body" style="margin-top:1rem;">
      <% unless flash.empty? %>
      <div class="container">
        <div class="row">
          <div class="twelve columns" style="background-color:#fee;border:1px solid black;border-radius:12px;padding:12px;margin-bottom:12px;">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <%= yield %>
    <div>
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <!--
          <pre><code>
            <%= debug(params) if Rails.env.development? %>
          </code></pre>
          -->
        </div>
      </div>
    </div>
  </body>
</html>
