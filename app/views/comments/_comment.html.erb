<div class="row " style="padding:12px;margin-bottom:1rem;border:1px solid black;border-radius:12px;background-color:#fee">
    <div class="three columns" style="width:104px;border:1px solid black;border-radius:12px;padding:12px;background-color:#eba">
      <%= gravatar_for(User.find_by name: comment.commenter) %><br>
      <div style="text-align:center;color:#854;">
        <%= comment.commenter %>
      </div>
    </div>
    <div class="nine columns">
      <div style="border:1px solid black;border-radius:12px;padding:12px;background-color:#eba">
        <%= comment.body %>
      </div>
      <br>
      <%= link_to 'Edit', edit_article_comment_path(@article, comment), class: "button" %>
      <%= link_to 'Delete', [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, class: "button" %>
    </div>
</div>
